{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": "./",
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "noImplicitAny": false,
    "lib": ["es2015", "dom", "es2015.promise"],
    "removeComments": false
  },
  "exclude": ["node_modules", "index.js", "dist"]
}
